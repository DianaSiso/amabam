<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hangman_game">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/heart_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />

                <ImageView
                    android:id="@+id/heart_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />

                <ImageView
                    android:id="@+id/heart_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />

                <ImageView
                    android:id="@+id/heart_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />

                <ImageView
                    android:id="@+id/heart_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <LinearLayout
                android:id="@+id/word_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/char_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/light_button_hangman" />

                <Button
                    android:id="@+id/char_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/light_button_hangman" />

                <Button
                    android:id="@+id/char_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/light_button_hangman" />

                <Button
                    android:id="@+id/char_4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/light_button_hangman" />

                <Button
                    android:id="@+id/char_5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/light_button_hangman" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/first_line"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_A"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="A" />

                        <Button
                            android:id="@+id/button_B"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="B" />

                        <Button
                            android:id="@+id/button_C"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="C" />

                        <Button
                            android:id="@+id/button_D"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="D" />

                        <Button
                            android:id="@+id/button_E"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="E" />

                        <Button
                            android:id="@+id/button_F"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="F" />

                        <Button
                            android:id="@+id/button_G"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="G" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/second_line"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_H"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="H" />

                        <Button
                            android:id="@+id/button_I"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="I" />

                        <Button
                            android:id="@+id/button_J"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="J" />

                        <Button
                            android:id="@+id/button_K"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="K" />

                        <Button
                            android:id="@+id/button_L"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="L" />

                        <Button
                            android:id="@+id/button_M"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="M" />

                        <Button
                            android:id="@+id/button_N"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="N" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/third_line"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_O"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="O" />

                        <Button
                            android:id="@+id/button_P"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="P" />

                        <Button
                            android:id="@+id/button_Q"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="Q" />

                        <Button
                            android:id="@+id/button_R"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="R" />

                        <Button
                            android:id="@+id/button_S"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="S" />

                        <Button
                            android:id="@+id/button_T"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="T" />

                        <Button
                            android:id="@+id/button_U"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="U" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fourth_line"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_V"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="V" />

                        <Button
                            android:id="@+id/button_W"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="W" />

                        <Button
                            android:id="@+id/button_X"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="X" />

                        <Button
                            android:id="@+id/button_Y"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="Y" />

                        <Button
                            android:id="@+id/button_Z"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/light_button_keyboard"
                            android:onClick="send_char"
                            android:text="Z" />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/game_over_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="GAME OVER"
                android:textSize="20sp"
                android:visibility="invisible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/hangman_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_button_background"
                    android:onClick="reset_button"
                    android:text="@string/hangman_reset"
                    android:textColor="@color/light_button_text"
                    android:visibility="invisible" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/hangman_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_button_background"
                    android:text="@string/hangman_save"
                    android:textColor="@color/light_button_text"
                    android:visibility="invisible" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>